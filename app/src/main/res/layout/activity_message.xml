<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is used as the header of any profile page, whether it is the user's own profile page
or viewing another's. The text and handler of friendsButton may need to be changed accordingly however -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture9"
        android:layout_width="128dp"
        android:layout_height="96dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="11dp"
        android:src="@drawable/profile"

        app:layout_constraintEnd_toStartOf="@+id/name9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address9"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="19dp"
        android:ellipsize="end"
        android:layout_gravity ="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"


        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/name9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profilePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name9"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:autoSizeTextType="uniform"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profilePicture"
        app:layout_constraintTop_toBottomOf="@+id/address9" />



</androidx.constraintlayout.widget.ConstraintLayout>